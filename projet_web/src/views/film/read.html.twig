{% extends 'base.html.twig' %}

{% block title %}Détails du film - {{ film.title }}{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary">{{ film.title }}</h1>
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Réalisateur : {{ film.director }}</h5>
                <p class="card-text">
                    <strong>Année :</strong> {{ film.year }}<br>
                    <strong>Type :</strong> {{ film.type }}<br>
                    <strong>Synopsis :</strong> {{ film.synopsis }}
                </p>
                <p class="text-muted">
                    <strong>Ajouté le :</strong> {{ film.createdAt.format('d/m/Y H:i') }}<br>
                    <strong>Modifié le :</strong> {{ film.updatedAt.format('d/m/Y H:i') }}
                </p>
                <a href="/film/list" class="btn btn-primary">Retour à la liste</a>
                <button class="btn btn-warning" onclick="document.getElementById('edit-form').classList.toggle('d-none')">
                    Modifier
                </button>
            </div>
        </div>

        <!-- Formulaire qui s'affiche lorsqu'on veut 'update' -->
        <div id="edit-form" class="d-none">
            <form action="/film/update?id={{ film.id }}" method="POST" class="bg-light p-4 rounded shadow-sm border">
                <h3 class="text-center text-warning mb-4">Modifier le film</h3>

                <div class="mb-3">
                    <label for="titre" class="form-label">Titre :</label>
                    <input type="text" id="titre" name="titre" class="form-control" value="{{ film.title }}" required>
                </div>

                <div class="mb-3">
                    <label for="annee" class="form-label">Année :</label>
                    <input type="number" id="annee" name="annee" class="form-control" value="{{ film.year }}" required>
                </div>

                <div class="mb-3">
                    <label for="type" class="form-label">Type :</label>
                    <input type="text" id="type" name="type" class="form-control" value="{{ film.type }}" required>
                </div>

                <div class="mb-3">
                    <label for="realisateur" class="form-label">Réalisateur :</label>
                    <input type="text" id="realisateur" name="realisateur" class="form-control" value="{{ film.director }}" required>
                </div>

                <div class="mb-3">
                    <label for="synopsis" class="form-label">Synopsis :</label>
                    <textarea id="synopsis" name="synopsis" class="form-control" rows="5" required>{{ film.synopsis }}</textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Enregistrer les modifications</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
